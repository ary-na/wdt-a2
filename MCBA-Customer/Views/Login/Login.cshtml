@model MCBA_Customer.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex h-100 flex-column align-items-center justify-content-center">
    <img class="m-5" src="~/img/logos/MCBA-Logo-Primary.png" alt="Most Common Bank of Australia Logo" width="60" height="60"/>
    <form asp-action="Login">
        <div class="mb-3 form-floating">
            <input asp-for="LoginID" class="form-control"/>
            <label asp-for="LoginID" class="form-floating"></label>
            <span asp-validation-for="LoginID" class="text-danger"></span>
        </div>
        <div class="mb-3 form-floating">
            <input type="password" asp-for="Password" class="form-control" id="floatingPassword"/>
            <label asp-for="Password" class="form-floating"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="w-100 btn btn-lg btn-outline-primary">Login</button>
        </div>
        @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}