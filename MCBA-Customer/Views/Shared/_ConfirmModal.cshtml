@model MCBA_Customer.ViewModels.Interfaces.ITransactionViewModel

<!-- Button trigger modal -->
<button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#confirmModal"
        xmlns="http://www.w3.org/1999/html">@Model.TransactionType</button>

<!-- Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">@Model.TransactionType</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <p class="text-muted">Please confirm the payment details before proceeding.</p>
                    <ul class="list-unstyled">
                        <li>Account Number @Model.Account?.AccountNumber (@Model.Account?.AccountType)</li>
                        <li class="amount"></li>
                        <li class="destination-account-number"></li>
                        <li class="comment"></li>
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">@Model.TransactionType</button>
            </div>
        </div>
    </div>
</div>