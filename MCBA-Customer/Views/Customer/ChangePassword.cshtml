@model MCBA_Customer.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="d-flex flex-column border rounded w-75">
    <h1 class="text-muted p-xl-5">Change Password</h1>

    <form asp-action="ChangePassword">
        <div class="row px-xl-5">
            <div class="col">
                <input type="hidden" asp-for="CustomerID"/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input type="Password" asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input type="Password" asp-for="ConfirmPassword" class="form-control">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 d-flex align-content-end justify-content-end">
                <button type="submit" class="btn btn-outline-primary">Save</button>
            </div>
        </div>
    </form>


    <div class="d-flex justify-content-end align-content-end p-xl-5">
        <a class="text-decoration-none text-muted" asp-action="Index">Back to My Profile</a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}